{
  "redirects": [
    { "source": "/:path*", "has": [{ "type": "host", "value": "appsg.site" }], "destination": "https://www.appsg.site/:path*", "permanent": true },
    { "source": "/:path+/", "destination": "/:path*", "permanent": true }
  ],
  "rewrites": [
    { "source": "/app/:slug*", "destination": "/" },
    { "source": "/category/:slug*", "destination": "/" },
    { "source": "/topic/:slug*", "destination": "/" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Robots-Tag", "value": "all" },
        { "key": "Cache-Control", "value": "public, max-age=600, s-maxage=600" }
      ]
    },
    {
      "source": "/sitemap.xml",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=3600, s-maxage=3600" }
      ]
    },
    {
      "source": "/rss.xml",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=900, s-maxage=900" }
      ]
    }
  ]
}